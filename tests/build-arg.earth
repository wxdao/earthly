VERSION 0.6
FROM alpine:3.15
WORKDIR /test

ARG global1=abc
ARG global2=def

all:
    BUILD +test1
    BUILD +test2
    BUILD +test3
    BUILD +test4
    BUILD +test5
    BUILD +test6
    BUILD +test7
    BUILD +test8
    BUILD +test9
    BUILD +test-global1
    BUILD +test-global2
    BUILD +test-global3
    BUILD +test-non-root

file-exists:
    ARG VAR1=nope.txt
    ARG VAR2=dummy
    RUN touch "$VAR2"
    RUN touch "existing-file.txt"
    RUN test -f "$VAR1"

test1:
    BUILD +file-exists --VAR1=existing-file.txt
    BUILD +file-exists --VAR1=dummy
    BUILD +file-exists --VAR1=dummy2 --VAR2=dummy2
    RUN touch dummy
    BUILD +file-exists --VAR1=$(ls)
    RUN rm dummy
    RUN touch existing-file.txt
    BUILD +file-exists --VAR1=$(ls)

test2:
    ARG ALPINE=3.11
    FROM alpine:$ALPINE
    RUN echo $ALPINE
    RUN test "$ALPINE" == "3.11"

dummy:
    FROM alpine:3.15

test3:
    ARG VAR1="test"
    FROM +dummy
    RUN test "$VAR1" == "test"

test4:
    RUN touch dummy
    ARG VAR1=$(ls)
    RUN touch should-not-be-seen
    RUN test "$VAR1" == "dummy"

test5:
    RUN printf '"text with quotes"' >./content
    ARG VAR1=$(cat ./content)
    RUN test "$VAR1" == '"text with quotes"'

test6:
    RUN echo world > data
    ARG VAR1="hello$(cat ./data)"
    RUN test "$VAR1" == "helloworld"

test7:
    FROM scratch
    ARG VAR1="literal\$(string)"
    FROM alpine:3.15
    RUN test "$VAR1" == "literal\$(string)"
    RUN echo -n $VAR1 | base64
    RUN echo -n $VAR1 | base64 | grep bGl0ZXJhbCQoc3RyaW5nKQ==

test8:
    FROM scratch
    ARG VAR1='literal$(whoami)string'
    FROM alpine:3.15
    RUN test "$VAR1" == 'literal$(whoami)string'
    RUN echo -n $VAR1 | base64 | grep bGl0ZXJhbCQod2hvYW1pKXN0cmluZw==

test9:
    RUN echo alpha > a
    RUN echo "bravo" > b
    RUN echo 'charlie' > c
    ENV d "delta"
    ARG VAR1="a is $(cat a) and b is $(dd if=b 2>/dev/null) and c is $(cat <c) and d is $d."
    RUN test "$VAR1" == "a is alpha and b is bravo and c is charlie and d is delta."

test-global1:
    RUN test "$global1" == "abc"
    RUN test "$global2" == "def"

test-global2:
    FROM alpine:latest
    RUN test "$global1" == "abc"
    RUN test "$global2" == "def"

test-global3:
    FROM +dummy
    RUN test "$global1" == "abc"
    RUN test "$global2" == "def"

test-non-root:
    RUN adduser --system weeheavy
    USER weeheavy
    ARG foo=$(echo bar)
    RUN test "$foo" == "bar"
